{
    "conditions":{
        "existingAccountPaymentMethod":{
	        "accountPaymentMethodID":{"neq":"new"}
	    },
        "newCreditCardAccountPaymentMethod":{
	        "accountPaymentMethodID":{"eq":"new"}
	    }
	},
	"properties":{
	    "creditCardNumber":				[{"conditions":"newCreditCardAccountPaymentMethod","required":true},{"dataType":"creditCard"}],
		"nameOnCreditCard":				[{"conditions":"newCreditCardAccountPaymentMethod","required":true}],
		"quantity":						[{"required":true,"dataType":"numeric","minValue":0}],
		"price":						[{"required":true,"dataType":"numeric","minValue":0}]
		
	},
	"populatedPropertyValidation":{
	    "billingAddress":[
	        {"conditions":"newCreditCardAccountPaymentMethod","validate":"full"},
	    	{"validate":false}
	    ]
	}
}